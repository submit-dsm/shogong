// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id   String @id
  name String
  grade Int
  class_num Int
  forms StudentsOnForms[]
}

model Form {
  id    String   @id
  title String
  description String
  startDate String
  endDate String
  author Admin @relation(fields: [authorId],references: [id])
  authorId String
  blocks Block[]
  student StudentsOnForms[]
  isUnknown Boolean
  studentTag String
  isComplete Boolean
}

model StudentsOnForms {
  student Student @relation(fields: [studentId], references: [id])
  studentId String
  form Form @relation(fields: [formId], references: [id])
  formId String
  @@id([studentId, formId])
}

model Admin {
  id String @id
  name String
  password String
  forms Form[]
}

model Block {
  id String @id
  title String
  blockType String
  block String
  form Form @relation(fields: [formId],references: [id])
  formId String
}