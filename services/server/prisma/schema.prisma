model Admin {
  id Int @id @default(autoincrement())
  name String
  password String
  myForm Form[]
}

model Block {
  id Int @id @default(autoincrement())
  type String
  question String
  blockJsonString String
  answer StudentAnswer[]
}

model Form {
  id Int @id @default(autoincrement())
  isUnknownForm Boolean
  startTime DateTime
  endTime DateTime
  description String
  studentTag String
  title String
  students StudentForm[]
  authorId Int
  author Admin @relation(fields: [authorId], references: [id])
}

model StudentAnswer {
  content String
  time DateTime
  studnetId String 
  blockId Int 
  block Block @relation(fields: [blockId],references: [id])
  @@id([blockId,studnetId])
}

model StudentForm {
  studentId String
  isComplate String
  formId Int
  form Form @relation(fields: [formId],references: [id])
  @@id([studentId, formId])
}